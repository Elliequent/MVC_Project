@model Local_Theatre_Company_V1._0.Models.ViewModels.EditPlayViewModel

    <h2>
        @if (User.IsInRole("Admin"))
        {

            <span style="color: red;">Admin</span> <span> | </span>

        }

        Edit Play

        <br />
        <br />

    </h2>

    <style>

        textarea {
            width: 200px;
            height: 200px;
        }
    </style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal row">

        <hr />

        <div class="col-md-8 col-sm-12">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.PlayName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PlayName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PlayName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PlayDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.PlayDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PlayDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PlayStart, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.PlayStart, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.EditorFor(model => model.PlayStart, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PlayStart, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PlayEnd, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <p style="text-align: center;"> @Model.PlayEnd.ToShortDateString() </p>
                    @Html.EditorFor(model => model.PlayEnd, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PlayEnd, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PlayPoster, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PlayPoster, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PlayPoster, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PlayType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.PlayType, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PlayType, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>

            <br />
            <p><span style="color: red"> @ViewBag.Error </span></p>
            <br />

        </div>

          <div class="col-lg-4 col-sm-12">
            <img src="@Model.PlayPoster" width="200" />
        </div>

    </div>
}

<div style="display: inline-block;">
    @Html.ActionLink("Back to Play List", "Plays")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
